name: Build PyQt Windows App

on:
  push:
    branches: [ main ]

jobs:
  build-windows:
    runs-on: windows-latest

    steps:
      # 1. Download your code
      - uses: actions/checkout@v3

      # 2. Install Python
      - name: Setup Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.10' # Stable version for PyQt6
          
      # 3. Install Dependencies
      - name: Install Libraries
        run: |
          pip install -r requirements.txt

      # 4. Build the EXE
      # --collect-all is CRITICAL for Fluent Widgets to find its icons/styles
      - name: Compile Application
        run: |
          pyinstaller --noconsole --onefile --name SuccessIndexApp --collect-all qfluentwidgets main.py

      # 5. Upload the EXE so you can download it
      - name: Upload Artifact
        uses: actions/upload-artifact@v3
        with:
          name: SuccessIndexApp
          path: dist/SuccessIndexApp.exe